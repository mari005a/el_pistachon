// Contenido del carrusel 1 (gira a la DERECHA)
const data1 = [
    {
        titulo: "Pistaches",
        desc: "Nuestros pistaches son seleccionados cuidadosamente para garantizar la calidad del producto.",
        img: "../imagenes/pistaches.jpg"
    },
    {
        titulo: "Nueces",
        desc: "Nueces frescas y crujientes, perfectas para botanear o usar en repostería.",
        img: "../imagenes/sem_nueces.jpg"
    },
    {
        titulo: "Arándanos",
        desc: "Arándanos deshidratados de excelente calidad, ideales para snacks saludables.",
        img: "../imagenes/arandanos.jpg"
    }
];

let index1 = 0;

// Contenido del carrusel 2 (gira a la IZQUIERDA)
const data2 = [
    {
        titulo: "Chile California",
        desc: "El chile California que ofrecemos se caracteriza por su tamaño y buen sabor.",
        img: "../imagenes/chilecalifornia.webp"
    },
    {
        titulo: "Chile Guajillo",
        desc: "Perfecto para preparar adobos, salsas rojas y platillos tradicionales.",
        img: "../imagenes/chi_guajillo.jpg"
    },
    {
        titulo: "Chile Ancho",
        desc: "Usado en moles, adobos y salsas espesas de sabor intenso.",
        img: "../imagenes/chi_puya.jpg"
    }
];

let index2 = 0;

// Botones
document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".flecha").forEach(btn => {
        btn.addEventListener("click", () => {
            const carrusel = btn.dataset.carrusel;

            if (carrusel == "1") {
                index1 = (index1 + 1) % data1.length;
                cambiarContenido("content-1", "image-1", data1[index1]);
            } else {
                index2 = (index2 - 1 + data2.length) % data2.length;
                cambiarContenido("content-2", "image-2", data2[index2]);
            }
        });
    });
});
function cambiarContenido(idContenido, idImagen, data) {
    const cont = document.getElementById(idContenido);
    const img = document.getElementById(idImagen);

    cont.querySelector("h2").textContent = data.titulo;
    cont.querySelector("p").textContent = data.desc;
    img.style.backgroundImage = `url(${data.img})`;
}



